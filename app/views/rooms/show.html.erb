<div class="chat-room">
  <h1>メッセージ</h1>
  <% @entries.each do |e| %>
    <strong><a href="/users/<%= e.user.id%>"><%= e.user.name%></a></strong>
  <% end %>

  <hr>
  <div class="chats">

    <div class="chat">
      <% if @messages.present? %>
        <% @messages.each do |m| %>
          <div class="chat-box">
            <div class="chat-text">
              <%= m.message %>
              <%= m.created_at.strftime("%Y-%m-%d %H:%M") %>
              <%= m.user.name%>
            </div>
          </div>
        <% end %>
      <% else %>
        <p>メッセージはまだありません</p>
      <% end %>
    </div>

    <div class="posts">
      <%= form_for @message do |f| %>
        <%= f.text_field :message, placeholder: "メッセージを入力してください" %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.submit "SEND" %>
      <% end %>
    </div>
  </div>
</div>
